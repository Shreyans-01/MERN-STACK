doctype html
html
  head
    title #{title}
    link(rel='stylesheet' href='/stylesheets/style.css')
    // CSS only
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-\
    1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  body
    h1 #{title}
    p Welcome to #{title}
    div
      .d-flex.justify-content-center
        img.img-fluid(src='../public/images/spongebob-gay-pride-01.jpg' alt='' height='auto' style='height: 100vh;')
      br
      hr
      br
      h3 EMPLOYEE DATA
      br
      hr
      br
      
      table.table
        thead
          tr
            th(scope='col') #
            th(scope='col') Name
            th(scope='col') Post
            th(scope='col') Salary (USD)
        tbody
          - employees.forEach(function(e, i) {
            tr
              th(scope='row') #{i}
              td #{e.name}
              td #{e.post}
              td #{e.salary}
          - })